<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expenses.Views.MainPage"
             Title="Wydatki">

    <StackLayout Margin="40">
        <Label Text="Dodaj nowy wydatek:" Margin="0,0,0,20"/>
        <Entry x:Name="input" Placeholder="Nowy wydatek..." Keyboard="Numeric" Margin="0,0,0,20"/>
        <Button Text="Dodaj" Clicked="SubmitClicked"/>
        <ListView x:Name="expensesList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding PriceDisplay}" Margin="20"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>
